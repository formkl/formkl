{
  "title": "Some random survey",
  "description": "This form is to survey and stuff ",
  "sections": [
    {
      "title": "Personal Information",
      "key": "personal-information",
      "fields": [
        {
          "type": "text",
          "label": "Fullname",
          "require": false,
          "key": "fullname"
        },
        {
          "type": "paragraph",
          "label": "Bio",
          "require": true,
          "key": "bio",
          "validation": {
            "regex": "^[a-zA-Z]$",
            "$and": [
              {
                "$gt": 100
              },
              {
                "$lt": 300
              }
            ]
          }
        },
        {
          "type": "text",
          "label": "Custom regex",
          "require": false,
          "key": "custom-regex",
          "validation": {
            "regex": "^[a-zA-Z]$"
          },
          "multiple": true
        }
      ]
    }
  ]
}