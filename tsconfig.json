{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist"
  },
  "references": [{ "path": "./tsconfig.vitest.json" }]
}
